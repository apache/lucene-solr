<project name="luke" default="default" xmlns:artifact="antlib:org.apache.maven.artifact.ant" xmlns:ivy="antlib:org.apache.ivy.ant">

  <description>
    Luke - Lucene Toolbox
  </description>

  <property name="demo.name" value="lucene-luke-${version}"/>

  <import file="../module-build.xml"/>

  <target name="init" depends="module-build.init,jar-lucene-core"/>

  <path id="classpath">
    <pathelement path="${analyzers-common.jar}"/>
    <pathelement path="${lucene-core.jar}"/>
    <pathelement path="${misc.jar}"/>
    <pathelement path="${queryparser.jar}"/>
    <pathelement path="${queries.jar}"/>
    <fileset dir="lib" />
    <path refid="base.classpath"/>
  </path>

  <target name="javadocs"/>

  <property name="luke.work.dir" value="${build.dir}/lucene-luke-${version}"/>
  <property name="luke.dist.zip" value="${build.dir}/lucene-luke-${version}.zip"/>
  <target name="build-artifacts-and-tests" depends="jar, compile-test">
    <mkdir dir="${luke.work.dir}/lib"/>

    <!-- copy libs -->
    <copy todir="${luke.work.dir}/lib">
      <fileset dir="${common.dir}/luke/lib">
        <include name="**/*.jar"/>
      </fileset>
    </copy>
    <copy file="${codecs.jar}" todir="${luke.work.dir}/lib"/>
    <copy file="${backward-codecs.jar}" todir="${luke.work.dir}/lib"/>
    <copy file="${lucene-core.jar}" todir="${luke.work.dir}/lib"/>
    <copy file="${analyzers-common.jar}" todir="${luke.work.dir}/lib"/>
    <copy file="${analyzers-icu.jar}" todir="${luke.work.dir}/lib"/>
    <copy file="${analyzers-kuromoji.jar}" todir="${luke.work.dir}/lib"/>
    <copy file="${analyzers-nori.jar}" todir="${luke.work.dir}/lib"/>
    <copy file="${analyzers-opennlp.jar}" todir="${luke.work.dir}/lib"/>
    <copy file="${analyzers-phonetic.jar}" todir="${luke.work.dir}/lib"/>
    <copy file="${analyzers-smartcn.jar}" todir="${luke.work.dir}/lib"/>
    <copy file="${analyzers-stempel.jar}" todir="${luke.work.dir}/lib"/>
    <copy file="${queryparser.jar}" todir="${luke.work.dir}/lib"/>
    <copy file="${queries.jar}" todir="${luke.work.dir}/lib"/>
    <copy file="${misc.jar}" todir="${luke.work.dir}/lib"/>
    <copy file="${luke.jar}" todir="${luke.work.dir}/lib"/>

    <!-- copy start scripts -->
    <copy todir="${luke.work.dir}/bin">
      <fileset dir="${common.dir}/luke/bin">
        <include name="**/*.sh"/>
        <include name="**/*.bat"/>
      </fileset>
    </copy>
    <chmod perm="755">
      <fileset dir="${luke.work.dir}">
        <include name="**/*.sh"/>
      </fileset>
    </chmod>

    <zip destfile="${luke.dist.zip}">
      <zipfileset dir="${luke.work.dir}" prefix="luke-${version}" excludes="**/*.sh"/>
      <zipfileset dir="${luke.work.dir}" prefix="luke-${version}" includes="**/*.sh" filemode="755"/>
    </zip>

    <delete dir="${luke.work.dir}"/>
  </target>

  <target name="compile-core" depends="jar-codecs,jar-backward-codecs,jar-analyzers-common,jar-analyzers-icu,jar-analyzers-kuromoji,jar-analyzers-morfologik,jar-analyzers-nori,jar-analyzers-opennlp,jar-analyzers-phonetic,jar-analyzers-smartcn,jar-analyzers-stempel,jar-misc,jar-queryparser,jar-queries,jar-misc,common.compile-core" />

</project>
