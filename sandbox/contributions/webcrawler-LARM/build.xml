    <!-- ================================================================== -->
    <!-- C L E A N   L A S T   R U N                                        -->
    <!-- ================================================================== -->
    <target name="cleanlastrun"
	    description="-> cleans files created by each run of the crawler">
	<delete dir="${logs.dir}"/>
	<delete dir="${cache.dir}"/>
    </target>

    <!-- ================================================================== -->
    <!-- C L E A N  B U I L D                                               -->
    <!-- ================================================================== -->
    <target name="clean"
	    description="-> cleans all build files">
